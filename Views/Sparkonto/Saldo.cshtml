@model BankApp.Models.SparkontoViewModel

@{
    ViewData["Title"] = "Saldo";
}
<br>

<div style="display: flex; flex-direction: column; align-items: center; position: relative; left: -7%;">
  <h2>Saldo</h2>
</div> 
  <br><br><br>
<div style="display: flex; flex-direction: column; align-items: center; position: relative; left: -7%;">
  @if (Model != null)
  {
    <span style="font-size: 48px; font-weight: bold;">@Model.Saldo.ToString("C")</span>
  }
  else
  {
    <p>Error: No account data found.</p>
  }
</div>

