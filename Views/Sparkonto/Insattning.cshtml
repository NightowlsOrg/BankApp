@model BankApp.Models.SparkontoViewModel

@{
    ViewData["Title"] = "Insättning";
}
<br>

<div style="display: flex; flex-direction: column; align-items: center; position: relative; left: -7%;">
  <h2>Insättning</h2>
</div>
<br><br><br>

<form asp-action="Insattning" method="post" class="create-form" style="text-align: left; margin-left: 40%">
  @if (!ViewData.ModelState.IsValid)
  {
    <div>
      @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
      {
        <p>@error.ErrorMessage</p>
      }
    </div>
  }
    <div class="form-group" style="width: 30%; margin-left: -9%;" >
      <input type="text" asp-for="Belopp" class="form-control" style="font-size: 36px;" required />
      <span asp-validation-for="Belopp" class="text-danger"></span>
    </div>
    <br><br>
  <div style="margin-left: -6%;">
      <button type="submit" class="btn btn-success" style="margin-right: 10px;">Sätt in</button>
      <a class="btn btn-danger" href="@Url.Action("meny", "minasidor")">Avbryt</a>
  </div>
</form>