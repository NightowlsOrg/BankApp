@model BankApp.Models.KundViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>Registrera dig</h2>

<form asp-action="Register" method="post">
    
    <div class="form-group">
        <label asp-for="Förnamn">Förnamn</label>
        <input asp-for="Förnamn" class="form-control" />
        <span asp-validation-for="Förnamn" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Efternamn">Efternamn</label>
        <input asp-for="Efternamn" class="form-control" />
        <span asp-validation-for="Efternamn" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Lösenord">Lösenord</label>
        <input asp-for="Lösenord" class="form-control" type="password" />
        <span asp-validation-for="Lösenord" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Adress">Adress</label>
        <input asp-for="Adress" class="form-control" />
        <span asp-validation-for="Adress" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Tele">Tele</label>
        <input asp-for="Tele" class="form-control" />
        <span asp-validation-for="Tele" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Epost">Email</label>
        <input asp-for="Epost" class="form-control" />
        <span asp-validation-for="Epost" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Register</button>
</form> 
