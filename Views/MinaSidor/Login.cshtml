@model BankApp.Models.LoginViewModel

@{
    ViewData["Title"] = "Logga in";

}

<br>
<center>
    <h4>Inloggning</h4>
</center>

<form asp-action="login" asp-controller="minasidor" method="post" asp-antiforgery="true" class="login-form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Förnamn" style="font-size: 18px;">Förnamn:</label>
        <input type="text" id="Förnamn" asp-for="Förnamn" class="form-control" required />
        <span asp-validation-for="Förnamn" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Lösenord" style="font-size: 18px;">Lösenord:</label>
        <input type="password" id="Lösenord" asp-for="Lösenord" class="form-control" required />
        <span asp-validation-for="Lösenord" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Logga in</button>
    </div>

    <div class="form-group">
    <a asp-action="Register" asp-controller="BankApp" class="btn btn-primary">Registrera dig</a>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .login-form {
        max-width: 400px;       /* Set a max width for the form */
        margin: auto;           /* Center the form on the page */
        position: relative;     /* Ensure positioning works with inner elements */
        top: 50px;              /* Adjust this value as needed to move form down */
        left: 0px;              /* Adjust this value to move form left */
    }
    .form-group {
        margin-bottom: 15px;    /* Space between form groups */
        margin-left: 10px;      /* Adjust this for leftward position */
    }
    .form-control {
        width: 100%;            /* Make input fields full width */
        padding: 10px;          /* Add padding for better touch targets */
        font-size: 16px;        /* Increase font size */
    }
</style>
