@model IEnumerable<BankApp.Application.KundDTO>

@{
    ViewData["Title"] = "Kunder";
}

<br>
<center>
    <h2>Kunder</h2>
</center>
<br>
<br>
<br>
<center>
<table class="table" style="width: 125%; margin-left: -150px;">
    <thead>
        <tr>
            <th>GUID</th>
            <th>Förnamn</th>
            <th>Efternamn</th>
            <th>Personnummer</th>
            <th>Adress</th>
            <th>Postnummer</th>
            <th>Postort</th>
            <th>Tele</th>
            <th>Epost</th>
            <th>Lösenord</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var kund in Model)
        {
            <tr>
                <td>@kund.Id</td>
                <td>@kund.Förnamn</td>
                <td>@kund.Efternamn</td>
                <td>@kund.Personnummer</td>
                <td>@kund.Adress</td>
                <td>@kund.Postnummer</td>
                <td>@kund.Postort</td>
                <td>@kund.Tele</td>
                <td>@kund.Epost</td>
                <td>@kund.Lösenord</td>
                <td>
                  <a class="btn btn-primary" href="@Url.Action("update", "admin", new { id = kund.Id })">Update</a>
                  <a class="btn btn-danger" href="@Url.Action("delete", "admin", new { id = kund.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br>
<br>
<br>
    <a class="btn btn-primary" asp-area="" asp-controller="bankapp" asp-action="nykund">Registrera ny kund</a>
</center>